<table>
    <tr>
      <th>Item</th>
      <th colspan="2">Item Price</th>
      <th colspan="3">Quantity</th>
      <th colspan="4">Total</th>
      <th colspan="5">Remove</th>
    </tr>

    <td><% @cart.contents.each do |k,v| %></td>
    <tr>
    <td><%= v["beer_name"]%></td>
    <td><%= number_to_currency(v["beer_price"].to_i/100) %></td>
    <td><%= v["quantity"] %></td> 
    <td><%= link_to "remove item", cart_items_path("item" => {beer_id: k}), method: "patch" %></td>
    <tr>
    <% end %>

</table>

<h2> Total: <%= number_to_currency(@cart.total/100) %></h2>
<% if current_user %>
  <%= button_to "Checkout",  orders_path( :order_info => {total: number_to_currency(@cart.total/100), user_id: current_user.id, beers: @cart.all_beers, }) %>
<% else %>
   <%= link_to "Please log in to checkout.", login_path %>
<% end %>