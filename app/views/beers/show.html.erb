<%= @beer.name %>
<%= @beer.description %>

<%= image_tag @beer.attachment.url %>

<%= form_for(:order, url: :cart_items) do |f| %>
<%= f.number_field :quantity, value: 1, in: 1..1000 %>
<%= f.hidden_field :beer_id, value: @beer.id %>
<%= f.hidden_field :beer_price, value: @beer.price %>
<%= f.submit "Add to Basket" %>
<% end %>